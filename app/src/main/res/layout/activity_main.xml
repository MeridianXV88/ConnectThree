<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.nbit.connectthree.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/imageBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/imageSlot1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageSlot2"
            android:layout_marginStart="12dp"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageSlot2"
            android:layout_marginEnd="11dp"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot1"
            android:layout_centerVertical="true"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot2"
            android:layout_alignTop="@+id/imageSlot4"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot3"
            android:layout_alignTop="@+id/imageSlot5"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot4"
            android:layout_below="@+id/imageSlot4"
            android:layout_marginTop="36dp"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot5"
            android:layout_alignTop="@+id/imageSlot7"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageSlot9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/imageSlot6"
            android:layout_alignTop="@+id/imageSlot8"
            android:onClick="showImage"
            app:srcCompat="@drawable/red" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
